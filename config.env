CONFIG_ENV=config.env

# 内核仓库
KERNEL_SOURCE=https://github.com/chen-chen-chen0/android_kernel_google_msm-4.14-coral-los19-1
KERNEL_SOURCE_BRANCH=los19-kernelsu
KERNEL_CONFIG=floral_defconfig
KERNEL_IMAGE_NAME=Image.lz4
ARCH=arm64

# 是否把 localversion 加到文件名里（随意）
ADD_LOCALVERSION_TO_FILENAME=false

# 额外传给 make 的参数：
# - LD=ld.lld   ：使用 lld 链接器
# - LLVM=1     ：使用 clang 工具链
# - LLVM_IAS=0 ：关闭 LLVM 内置汇编器，避免 vgettimeofday.S 编译错误
EXTRA_CMDS="LD=ld.lld LLVM=1 LLVM_IAS=0"

# Clang 相关
## 自定义 Clang（这里先不用）
USE_CUSTOM_CLANG=false
CUSTOM_CLANG_SOURCE=
CUSTOM_CLANG_BRANCH=

# 如果 USE_CUSTOM_CLANG=false，就别改 CUSTOM_CMDS；这里也用正确的 =
CUSTOM_CMDS="CLANG_TRIPLE=aarch64-linux-gnu-"

## AOSP Clang 版本（保持默认即可）
CLANG_BRANCH=master-kernel-build-2022
CLANG_VERSION=r450784e

# GCC 交叉编译器
ENABLE_GCC_ARM64=true
ENABLE_GCC_ARM32=true

USE_CUSTOM_GCC_64=false
CUSTOM_GCC_64_SOURCE=
CUSTOM_GCC_64_BRANCH=
CUSTOM_GCC_64_BIN=aarch64-linux-android-

USE_CUSTOM_GCC_32=false
CUSTOM_GCC_32_SOURCE=
CUSTOM_GCC_32_BRANCH=
CUSTOM_GCC_32_BIN=arm-linux-androideabi-

# KernelSU 相关
ENABLE_KERNELSU=true
KERNELSU_TAG=v0.9.5
KSU_EXPECTED_SIZE=
KSU_EXPECTED_HASH=

# 配置选项
DISABLE_LTO=false          # 名字改成下划线
DISABLE_CC_WERROR=true
ADD_KPROBES_CONFIG=true
ADD_OVERLAYFS_CONFIG=true

# 是否自动打官方 non-GKI patch（先关，kprobe 能跑就不用）
APPLY_KERNELSU_PATCH=false

REMOVE_UNUSED_PACKAGES=true

# AnyKernel3
USE_CUSTOM_ANYKERNEL3=false
CUSTOM_ANYKERNEL3_SOURCE=
CUSTOM_ANYKERNEL3_BRANCH=

# ccache 提速
ENABLE_CCACHE=true

# 不需要 dtbo
NEED_DTBO=false

# 不在 Action 里直接打 boot.img，而是只出 AnyKernel3 包
BUILD_BOOT_IMG=false
SOURCE_BOOT_IMAGE=https://raw.githubusercontent.com/xiaoleGun/KernelSU_action/main/boot/boot.img
